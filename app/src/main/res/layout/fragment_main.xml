<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.dhammond1.tabfragmenttest.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    >

    <LinearLayout
        android:id="@+id/linearSession"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Session Timer"
            android:textSize="20dp"
            android:layout_weight="1.0"
            />

    </LinearLayout>


    <LinearLayout
            android:id="@+id/linear1"
            android:layout_below="@+id/linearSession"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/chronStart"
                android:text="Start"

                android:layout_weight="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <!-- check clock spacing -->
            <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingLeft="30dp"
                android:textSize="40dp"
                android:layout_margin="10dp"
                android:id="@+id/chronometer"
                android:layout_alignParentStart="true"
                android:textStyle="normal" />


            <Button
                android:text="Stop"
                android:layout_weight="0.0"

                android:id="@+id/chronStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
        android:id="@+id/linearHeading"
        android:orientation="horizontal"
        android:layout_below="@id/linear1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Measured Temp"
            android:textSize="20dp"
            android:layout_weight="1.0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Target Temp"
            android:textSize="20dp"
            android:layout_weight="1.0"
            />

    </LinearLayout>

        <LinearLayout
        android:id="@+id/linearPit"
        android:orientation="horizontal"
        android:layout_below="@+id/linearHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tx_tempPit"
                android:layout_weight="0.0"
                android:layout_gravity="bottom"
                android:textColor="@color/measureRed"
                android:text="250"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="PIT"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_weight="1.0"
                android:layout_gravity="bottom"
                android:paddingLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/ed_targetPitTemp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_sizeEdit"
                android:text="250"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom"
                android:focusable="true"
                android:inputType="number"
                android:maxLength="3"/>


            <Button
                android:id="@+id/btn_setPit"
                android:onClick="On_btn_setPit"
                android:layout_weight="0.0"
                android:layout_gravity="bottom"
                android:text="Set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMeat"
            android:orientation="horizontal"
            android:layout_below="@+id/linearPit"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tx_tempMeat"
                android:layout_weight="0.0"
                android:layout_gravity="bottom"
                android:textColor="@color/measureRed"
                android:text="250"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="MEAT"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_weight="1.0"
                android:layout_gravity="bottom"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_below="@id/linearMeat"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Settings"
                android:textSize="20dp"
                android:layout_weight="1.0"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearMinTemp"
            android:layout_below="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Pit Min"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:layout_weight="1.0"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/ed_targetMinTemp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_sizeEdit"
                android:text="250"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom"
                android:focusable="true"
                android:inputType="number"
                android:maxLength="3"/>


            <Button
                android:id="@+id/btn_setMinTemp"
                android:onClick="On_btn_SetMin"
                android:layout_weight="0.0"
                android:layout_gravity="bottom"
                android:text="Set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearFanSpeed"
        android:layout_below="@+id/linearMinTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Fan Speed"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:layout_weight="1.0"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/ed_targetFanSpeed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_sizeEdit"
            android:text="50"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:focusable="true"
            android:inputType="number"
            android:maxLength="3"/>


        <Button
            android:id="@+id/btn_setFanSpeed"
            android:onClick="On_btn_SetFan"
            android:layout_weight="0.0"
            android:layout_gravity="bottom"
            android:text="Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearSaveConfig"
        android:orientation="horizontal"
        android:layout_below="@id/linearFanSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/ckbx_SaveSettings"
            android:text="Save Settings"
            android:textSize="@dimen/text_size"
            android:clickable="true"
            android:checked="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
